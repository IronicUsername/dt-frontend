html, body
    width: 100%
    height: 100%
    margin: 0
    padding: 0
    background-color: #121212
    display: flex

#app
    min-height: 100vh
    width: 100%
    display: flex
    flex-direction: column
    color: #ccc
// page transition
.fade-enter-active, .fade-leave-active
    transition-property opacity
    transition-duration .25s


.fade-enter-active
    transition-delay .25s


.fade-enter, .fade-leave-active
    opacity 0
